<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6CCFF"
    tools:context="com.android.gpsbasedprofilechanger.MainActivity">

        <EditText
            android:id="@+id/e2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textView3"
            android:layout_alignStart="@+id/e1"
            android:hint="enter latitude"
            android:textSize="25dp"
            android:textStyle="italic"
            tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lon"
        android:layout_below="@+id/lon"
        android:layout_marginTop="32dp"
        android:text="Radius(m)"
        android:textColor="?attr/colorPrimary"

        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/spinner"
        android:layout_below="@+id/list"
        android:layout_marginTop="14dp"
        android:hint="enter latitude"
        android:textColor="?attr/colorPrimary"
        android:textSize="25dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lat"
        android:layout_below="@+id/lat"
        android:layout_marginTop="37dp"
        android:text="Longitude"
        android:textColor="?attr/colorPrimary"

        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignStart="@+id/textView3"
        android:background="#254"
        android:text="clear"
        android:textColor="#d2f"
        android:textStyle="italic"
        tools:background="?attr/colorPrimary" />

        <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintVertical_bias="0.058"

        android:layout_marginEnd="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/spinner" />

    <TextView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lat"
        android:layout_alignTop="@+id/spinner"
        android:fontFamily="monospace"
        android:text="Location"
        android:textColor="?android:attr/statusBarColor"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"


        android:entries="@array/items"
        android:prompt="@string/placeprompt"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="37dp"
        android:layout_below="@+id/i3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/e1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:text="Latitude"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/e2"
        android:hint="enter radius"
        android:textSize="25dp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:background="#254"
        android:text="Submit"
        android:textColor="#d2f"
        android:textStyle="italic"
        tools:background="?attr/colorPrimary" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/welcome"
        android:background="?attr/colorPrimary"
        android:text="View"
        android:textColor="#d2f"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="500sp"
        android:layout_height="100sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/banner"
        tools:ignore="ContentDescription" />

</RelativeLayout>
